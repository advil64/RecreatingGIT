    "version": "0.2.0",
    "configurations": [
        {
            "name": "Client Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/WTF",
            "args": ["update", "testDirectory"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Server Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/WTFserver",
            "args": ["20213"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}